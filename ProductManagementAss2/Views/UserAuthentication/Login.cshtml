@model ProductManagementAss2.Models.DTO.LoginModel

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-body">
                    <h2 class="card-title text-center">Login</h2>
                    <form asp-action="Login" method="post" class="needs-validation" novalidate>
                        <div class="mb-3">
                            <label for="Username" class="form-label">Username</label>
                            <input type="text" asp-for="Username" class="form-control" placeholder="Enter Username" required>
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label for="Password" class="form-label">Password</label>
                            <input type="password" asp-for="Password" class="form-control" placeholder="Enter Password" required>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        @if (TempData["msg"] != null)
                        {
                            <div class="alert alert-danger">@TempData["msg"]</div>
                        }
                        <div class="form-group">
                            <div class="col-md-3">
                                <div class="custom-checkbox">
                                    <label asp-for="rememberme">
                                        <input asp-for="rememberme" />
                                        @Html.DisplayNameFor(m => m.rememberme)
                                    </label>
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-box-arrow-in-right"></i> Login
                        </button>
                        <p class="mt-2 text-center">
                            <a href="/UserAuthentication/Registration" class="text-muted">Not a user? Signup</a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
