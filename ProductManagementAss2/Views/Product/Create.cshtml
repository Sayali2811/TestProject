@model ProductManagementAss2.Models.Domain.Product

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <div class="text-center">
        <h1>Create</h1>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card rounded">
                <div class="card-header">
                    <h4 class="mb-0">Products</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Category" class="control-label"></label>
                            <input asp-for="Category" class="form-control" />
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Price" class="control-label"></label>
                            <input asp-for="Price" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-2 text-center">
                            <button type="submit" class="btn btn-success mr-2 rounded">
                                <i class="bi bi-patch-plus"></i> Create
                            </button>
                            <a asp-action="Index" class="btn btn-primary rounded">
                                <i class="bi bi-backspace-fill"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
